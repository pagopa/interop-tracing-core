{
  "private": true,
  "name": "root",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start:tracing-api": "turbo start --filter pagopa-interop-tracing-api",
    "start:tracing-operations": "turbo start --filter pagopa-interop-tracing-operations",
    "start:tracing-state-updater": "turbo start --filter pagopa-interop-tracing-state-updater",
    "start:tracing-processing": "turbo start --filter pagopa-interop-tracing-processing",
    "start:tracing-enriched-data-handler": "turbo start --filter pagopa-interop-tracing-enriched-data-handler",
    "start:tracing-clean-up": "turbo start --filter pagopa-interop-tracing-clean-up",
    "start:event:tenant": "turbo start --filter pagopa-interop-tracing-tenant-event-consumer",
    "start:event:eservice": "turbo start --filter pagopa-interop-tracing-eservice-event-consumer",
    "start:event:purpose": "turbo start --filter pagopa-interop-tracing-purpose-event-consumer",
    "start:producer": "turbo start --filter pagopa-interop-tracing-kafka-producer",
    "start:webhook": "turbo start --filter pagopa-interop-tracing-minio-webhook",
    "test": "turbo test",
    "test:it": "turbo test:it",
    "build": "turbo build",
    "lint": "turbo lint",
    "lint:autofix": "turbo lint:autofix",
    "format:check": "turbo format:check",
    "format:write": "turbo format:write",
    "generate-model": "turbo generate-model",
    "generate-client": "turbo generate-client",
    "clean-generated": "turbo clean-generated",
    "check": "turbo check",
    "infra:start": "./scripts/infra-start.sh",
    "infra:stop": "./scripts/infra-stop.sh",
    "infra:destroy": "./scripts/infra-destroy.sh",
    "prune-dist": "find . -name 'dist' -type d -exec rm -rf {} +",
    "prune-modules": "find . -name 'node_modules' -type d -exec rm -rf {} +"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "20.1.3",
    "turbo": "1.13.3"
  },
  "packageManager": "pnpm@9.4.0"
}